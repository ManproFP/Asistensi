a{
	text-decoration:none;
	border:none;
}

body {
   margin:0px;
   min-height: 100%;
   width: 100%;
   min-width: 900px;
   background-repeat: no-repeat;
   background-attachment: fixed;
}

html {
   margin:0px;
   height: 100%;
   width: 100%;
}

.button{
	cursor:pointer;
}

.field_a input{
	border: 1px solid #BDC7D8;
	border-color: #1D2A5B;
	background-color:white;
	padding-left:2px;
	font-size:11px;
	color:black;
	height:16px;
	width:120px;
	line-height:16px;
	vertical-align: middle;
}

.field_b input{
	border: 1px solid red;
	border-radius:3px;
	border-color: black;
	background: linear-gradient(to bottom, #A5072D, black);
	color:white;
	height:22px;
	line-height:22px;
	vertical-align:middle;
	font-weight:bold;
	font-size:11px;
	width:50px;
}

.field_b input:hover{
	background: linear-gradient(to bottom, #A5072D, #5E1B2C);
}

.image{
	color:white;
	text-decoration:none;
}

.input_n{
	margin-bottom:10px;
	border:2px solid gray;
	border-radius:5px;
	width:300px;
	height:20px;
	line-height:18px;
	vertical-align:middle;
	background: white;
	padding-left:3px;
	color:black;
}

.label_a label{
	padding-left:2px;
	color:white;
	font-size:11px;
	line-height:1.28;
	vertical-align:middle;
}

.label_a label:hover, .label_b label:hover{
	cursor:pointer;
}

.label_b label{
	color:#98A9CA;
	font-size:11px;
	line-height:1.28;
	vertical-align:middle;
	padding-bottom:3px;
}

.wrapper{
	margin:0px;
	min-height:100%;
	width:100%;
	min-width:900px;
}

#content{
	min-height:500px;
	width:850px;
	margin: 0px auto;
	border-bottom:1px solid red;
}

#dummy{
	height:90px;
	border: 1px solid gray;
}

#gender_opt{
	color:black;
}

#gender_opt label{
	margin-right:10px;
	cursor:pointer;
}

#green_board{
	width: 362px;
	margin:0px auto;
}

#green_note{
	padding-top:20px;
	width: 340px;
	margin:0px auto;
	text-align:center;
}

#header{
	width:850px;
	margin: 0px auto;
}

#img_logo{
	/*height:80px;
	margin-top:5px;
	width:80px;*/
	margin-left:5px;
	position:absolute;
}

#img_title{
	height:77px;
	width:233px;
	margin-top:3px;
	padding-top:5px;
	margin-left:80px;
}

#login_form td{
	padding-right:10px;
}

#lower_left{
	padding-top:70px;
	width:450px;
}

#lower_right{
	width:350px;
	float:right;
}

#lower_wrap{
	min-height:550px;
    background: linear-gradient(to bottom, white, #D3D8E8);
}

#main_note{
	font-size:22px;
}

#no_hp{
	margin-bottom:0px;
}

#upper_left{
	width:500px;
}

#upper_right{
	margin-top:5px;
	width:340px;
	float:right;
}

#upper_right a{
	color:#98A9CA;
	font-size:11px;
	line-height:1.28;
	vertical-align:middle;
	padding:0px 0px 3px 3px;
}

#upper_right a:hover{
	text-decoration:underline;
}

#upper_wrap{
	min-height:90px;
	border-bottom: 2px solid gray;
	background:#5E1B2C;
	position:fixed;
	top:0px;
}

#sign_up{
	width:305px;
}

#sign_up_note{
	padding-top:20px;
	font-size:16px;
	color:#141823;
	font-family:'Freight Sans','lucida grande',tahoma,verdana,arial,sans-serif;
}

#star_note{
	color:#999;
	font-size:10px;
	margin-top:-5px;
}

#submit_sign_up{
	margin-left:100px;
	margin-top:15px;
	width:100px;
	height:25px;
	border:2px solid green;
	color:white;
	font-size:12px;
	font-weight:bold;
	border-radius:10px;
	background:linear-gradient(to bottom, #009900, #355E3B);
}

#submit_sign_up:hover{
	background:#009900;
}