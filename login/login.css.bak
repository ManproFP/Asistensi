a{
	text-decoration:none;
	border:none;
}

body {
   margin:0px;
   min-height: 100%;
   width: 100%;
   min-width: 900px;
   background-color:#202020;
}

html {
   margin:0px;
   height: 100%;
   width: 100%;
}

label:hover{
	cursor:pointer;
}

.button{
	cursor:pointer;
}

.field_a input{
	border: 1px solid #BDC7D8;
	border-color: #1D2A5B;
	background-color:white;
	padding-left:2px;
	font-size:11px;
	color:black;
	height:16px;
	width:120px;
	line-height:16px;
	vertical-align: middle;
}

.field_b input{
	border: 1px solid red;
	border-radius:3px;
	border-color: black;
	background: linear-gradient(to bottom, #A5072D, black);
	color:white;
	height:22px;
	line-height:22px;
	vertical-align:middle;
	font-weight:bold;
	font-size:11px;
	width:50px;
}

.field_b input:hover{
	background: linear-gradient(to bottom, #A5072D, #5E1B2C);
}

.field_c input{
	border: 1px solid #BDC7D8;
	background-color:white;
	padding-left:2px;
	font-size:11px;
	color:black;
	height: 18px;
	width:150px;
	line-height:18px;
	vertical-align: middle;
	margin-left:35px;
	margin-bottom:5px;
}

.image{
	color:white;
	text-decoration:none;
}

.input_n{
	margin-bottom:10px;
	border:2px solid gray;
	border-radius:5px;
	width:300px;
	height:20px;
	line-height:18px;
	vertical-align:middle;
	background: white;
	padding-left:3px;
	color:black;
}

.label_a label{
	padding-left:2px;
	color:white;
	font-size:11px;
	line-height:1.28;
	vertical-align:middle;
}

.label_b label{
	color:#98A9CA;
	font-size:11px;
	line-height:1.28;
	vertical-align:middle;
	padding-bottom:3px;
}

.label_c label{
	padding-left:2px;
	color:#333;
	font-size:12px;
	line-height:1.28;
	vertical-align:middle;
	font-weight:bold;
	margin-left:35px;
}

.wrapper{
	margin:0px;
	min-height:100%;
	width:100%;
	min-width:900px;
}

#content{
	min-height:475px;
	width:850px;
	margin: 0px auto;
	border-bottom:2px solid #BBBBBA;
}

#dummy{
	height:90px;
	border: 1px solid gray;
}

#error_content{
	min-height:400px;
	width:500px;
	margin: 0px auto;
	margin-top:75px;
	border:1px solid gray;
	border-radius:5px;
}

#error_content > p{
	border-bottom:1px solid gray;
	margin:25px 20px 25px 20px;
	font-size:14pt;
	padding-bottom:5px;
}

#error_note{
	font-size:11px;
	padding-left:10px;
	padding-bottom:5px;
	min-height:30px;
	width:446px;
	margin: 0px auto;
	border: 1px solid #DD3C10;
	background-color: #FFEBE8;
	font-family: 'lucida grande',tahoma,verdana,arial,sans-serif;
}

#error_title{
	font-size:13px;
	margin:5px;
	margin-left:0px;
	font-weight:bold;
}

#forget_pass{
	margin-bottom:10px;
}

#forget_pass a {
    color: #3B5998;
    font-size: 11px;
    line-height: 1.28;
    vertical-align: middle;
    padding: 0px 0px 3px 3px;
	margin-left:35px;
}

#gender_opt{
	color:black;
}

#gender_opt label{
	margin-right:10px;
	cursor:pointer;
}

#gender_opt i{
	display:inline;
	font-size:12px;
	color:red;
}

#green_board{
	width: 362px;
	margin:0px auto;
}

#green_note{
	padding-top:20px;
	width: 340px;
	margin:0px auto;
	text-align:center;
}

#header{
	width:850px;
	margin: 0px auto;
}

#img_logo{
	/*height:80px;
	margin-top:5px;
	width:80px;*/
	margin-left:5px;
	position:absolute;
}

#img_title{
	height:77px;
	width:233px;
	margin-top:3px;
	padding-top:5px;
	margin-left:80px;
}

#login_form td{
	padding-right:10px;
}

#lower_left{
	padding-top:70px;
	width:450px;
}

#lower_right{
	width:350px;
	float:right;
}

#lower_wrap{
	padding-top:50px;
	display:inline-block;
	min-height:525px;
    background: linear-gradient(to bottom, white, #D3D8E8);
	padding-bottom:25px;
}

#main_note{
	font-size:22px;
}

#no_hp{
	margin-bottom:0px;
}

#signup_content{
	min-height:200px;
	width:500px;
	margin: 0px auto;
	margin-top:75px;
	border:1px solid gray;
	border-radius:5px;
}

#signup_content > p{
	border-bottom:1px solid gray;
	margin:25px 20px 25px 20px;
	font-size:14pt;
	padding-bottom:5px;
}

#signup_note{
	font-size:11px;
	padding-left:10px;
	padding-bottom:5px;
	min-height:30px;
	width:446px;
	margin: 0px auto;
	border: 1px solid #3B5998;
	background-color: #D3D7DC;
	font-family: 'lucida grande',tahoma,verdana,arial,sans-serif;
}

#signup_title{
	font-size:13px;
	margin:5px;
	margin-left:0px;
	font-weight:bold;
}


#upper_left{
	width:500px;
}

#upper_right{
	margin-top:5px;
	width:340px;
	float:right;
}

#upper_right a{
	color:#98A9CA;
	font-size:11px;
	line-height:1.28;
	vertical-align:middle;
	padding:0px 0px 3px 3px;
}

#upper_right a:hover{
	text-decoration:underline;
}

#upper_wrap{
	min-height:90px;
	border-bottom: 2px solid gray;
	background:#5E1B2C;
	position:fixed;
	top:0px;
}

#relogin{
	min-height:200px;
	width:220px;
	margin:0px auto;
	margin-top:20px;
}

#relogin span{
	font-size:12px;
	margin:2px;
}

#relogin_submit{
	padding-left:35px;
}

#relogin_submit a{
	height: 16px;
	line-height: 16px;
	vertical-align:middle;
	font-weight:bold;
	font-size:14px;
	color:#3B5998
}

#sign_up{
	width:305px;
}

#sign_up_note{
	padding-top:20px;
	font-size:16px;
	color:#141823;
	font-family:'Freight Sans','lucida grande',tahoma,verdana,arial,sans-serif;
}

#star_note{
	color:#369;
	font-size:10px;
	margin-top:-5px;
}

#submit_sign_up{
	margin-top:15px;
	width:100px;
	height:25px;
	border:2px solid #407B4B;
	color:white;
	font-size:12px;
	font-weight:bold;
	border-radius:10px;
	background:linear-gradient(to bottom, #97B733/*#51965F*/, #407D4B);
}

#submit_sign_up:hover{
	border-color:#51965F;
	background:#97B733;
}